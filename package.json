{
  "name": "perk-user-management",
  "version": "1.0.0",
  "description": "Perk User Management",
  "main": "index.js",
  "scripts": {
    "start": "npm run serve",
    "serve": "node app.js",
    "local": "cross-env NODE_ENV=local ts-node-dev app.ts",
    "build": "npm run build-ts",
    "watch-ts": "tsc -w -p ./tsconfig.json",
    "build-ts": "tsc -p ./tsconfig.json",
    "watch-node": "nodemon ./dist/app.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "npm run build-ts && cross-env NODE_ENV=local mocha './dist/**/*.spec.js'",
    "format": "prettier --write \"server/**/*.ts\" \"config/**/*.ts\""
  },
  "keywords": [
    "user-management",
    "microservice"
  ],
  "author": "Milos Covilo",
  "license": "ISC",
  "dependencies": {
    "@automapper/classes": "^7.0.2",
    "@automapper/core": "^7.0.2",
    "@messageformat/core": "3.0.0",
    "@typegoose/typegoose": "9.3.1",
    "@types/i18n": "0.13.1",
    "@types/sinon-chai": "3.2.6",
    "axios": "0.24.0",
    "body-parser": "1.19.1",
    "chain-perk-library": "git+https://github.com/djuromatic/chain-perk-library.git",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "cors": "2.8.5",
    "dotenv": "10.0.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "express": "4.17.1",
    "express-validator": "6.14.0",
    "i18n": "0.13.3",
    "inversify": "6.0.1",
    "inversify-express-utils": "6.4.3",
    "mongoose": "6.0.14",
    "prettier": "^2.5.1",
    "reflect-metadata": "0.1.13"
  },
  "devDependencies": {
    "@types/body-parser": "1.19.2",
    "@types/chai": "4.3.0",
    "@types/cors": "2.8.12",
    "@types/express": "4.17.13",
    "@types/mocha": "9.0.0",
    "@types/sinon": "10.0.6",
    "@typescript-eslint/eslint-plugin": "5.7.0",
    "@typescript-eslint/parser": "5.7.0",
    "chai": "4.3.4",
    "concurrently": "6.4.0",
    "cross-env": "7.0.3",
    "mocha": "9.1.3",
    "sinon": "12.0.1",
    "sinon-chai": "3.7.0",
    "ts-node-dev": "1.1.8",
    "typescript": "4.5.4"
  }
}
